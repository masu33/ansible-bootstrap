#!/bin/bash
### BEGIN INIT INFO
# Provides:          VNCSERVER
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start daemon at boot time
# Description:       Enable service provided by daemon.
### END INIT INFO

servicename="vncserver"

unset VNCSERVERARGS
VNCSERVERS=""

VNCSERVERS="{% for setting in settings %}{{loop.index}}:{{setting.user}} {% endfor %}"
{%
for setting in settings
    %}{%
    if setting | list | reject('equalto', 'user') | reject('equalto', 'password') != []
        %}VNCSERVERARGS[{{loop.index}}]="{%
        for key in vncserver_key_args
        %}{%
            if key in setting
                %} -{{ key }} {{ setting[key] | replace('"', '\\"') }}{%
            elif key in vncserver_defaults
                %} -{{ key }} {{ vncserver_defaults[key] | replace('"', '\\"') }}{%
            endif
        %}{%
        endfor
        %}{%
        for key in vncserver_flag_args
        %}{%
            if key in setting and setting[key]
                %} -{{ key }}{%
            elif key in vncserver_defaults and vncserver_defaults[key]
                %} -{{ key }}{%
            endif
        %}{%
        endfor
        %}"{%
    endif
    %}{%
endfor
%}


start() {
    . /lib/lsb/init-functions
    REQ_USER=$2
    echo -n $"Starting ${servicename}: "
    ulimit -S -c 0 >/dev/null 2>&1
    RETVAL=0
    for display in ${VNCSERVERS}; do
        export USER="${display##*:}"
        if test -z "${REQ_USER}" -o "${REQ_USER}" == "${USER}" ; then
            echo -n "${display} "
            unset BASH_ENV ENV
            DISP="${display%%:*}"
            export VNCUSERARGS="${VNCSERVERARGS[${DISP}]}"
            sudo -u ${USER} -s /bin/bash -c "cd ~; [ -f .vnc/passwd ] && vncserver :${DISP} ${VNCUSERARGS}"
        fi
    done
    echo -e "\n"
    echo "VNCServers started"
}

stop() {
    . /lib/lsb/init-functions
    REQ_USER=$2
    echo -n $"Shutting down ${servicename}: "
    for display in ${VNCSERVERS}; do
        export USER="${display##*:}"
        if test -z "${REQ_USER}" -o "${REQ_USER}" == ${USER} ; then
            echo -n "${display} "
            unset BASH_ENV ENV
            export USER="${display##*:}"
            sudo -u ${USER} -s /bin/bash -c "vncserver -kill :${display%%:*}" >/dev/null 2>&1
        fi
    done
    echo -e "\n"
    echo "VNCServers stopped"
}

case "$1" in
    start)
        start $@
    ;;
    stop)
        stop $@
    ;;
    restart|reload)
        stop $@
        sleep 3
        start $@
    ;;
    status)
        status ${servicename}
    ;;
    *)
        echo $"Usage: $0 {start|stop|restart|status}"
        exit 1
esac
